/*******************exercice 4***-/////*//////

programme  Mult

variables 
var Nb1, Nb2: integer 
var i : integer 

begin 

readln(Nb1)
Readln(Nb2)


for ( i = 1 to NB2) do 

Nb1=Nb1+Nb1


endfor 

readln ( Nb1); 

end


/******************************  exercice 5*/////*******//

programme Multi

var Nb1, Nb2: integer 
var i : integer 

begin 

readln(Nb1)
Readln(Nb2)


for ( i = 1 to NB2) do 

Nb1=Nb1*Nb1


endfor 

readln ( Nb1); 

end
